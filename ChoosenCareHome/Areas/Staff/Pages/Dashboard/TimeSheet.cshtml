@page
@model ChoosenCareHome.Areas.Staff.Pages.Dashboard.TimeSheetModel
@{
}

<div>
    <h1>TimeSheet</h1>

</div>
<div class="card">
    <div class="card-header">

    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Date</th>
                    
                    <th>
                        Start Time
                    </th>
                    <th>
                        End Time
                    </th>

                    <th>
                        Post Code
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.TimeSheet.OrderByDescending(x => x.Date))
                {
                    <tr>
                        <td>
                            @if (item.TimeSheet != null)
                            {@item.TimeSheet.Date.ToString("ddd dd MMM, yyyy")
                        }
                        </td>
                       
                        <td>
                            @item.StartTime.ToString(@"hh\:mm")
                        </td>
                        <td>
                            @item.EndTime.ToString(@"hh\:mm")
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.PostCode)
                        </td>

                        <td>
                            <a asp-page="./Details" asp-route-id="@item.Id">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div> 