@page
@model ChoosenCareHome.Areas.Admin.Pages.ApplicationPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>APPLICATIONS</h1>

 
<table class="table">
    <thead>
        <tr>
            <th>S/N</th>
            <th>
                Fullname
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Application[0].DateOfBirth)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Application[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Application[0].Postcode)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Application[0].EMail)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Application[0].PhoneNumber)
            </th>

            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    @{ int sn = 0;}
    <tbody>
@foreach (var item in Model.Application) {
        <tr>
            @{ sn++;}
            <td>
                @sn
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
             
                @Html.DisplayFor(modelItem => item.FirstName)
             
                @Html.DisplayFor(modelItem => item.MiddleName)
             
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Postcode)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.EMail)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
             <td>Status</td>
            <td> 
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a>  
            </td>
        </tr>
}
    </tbody>
</table>
