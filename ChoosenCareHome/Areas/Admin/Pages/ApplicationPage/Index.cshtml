@page
@model ChoosenCareHome.Areas.Admin.Pages.ApplicationPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>List of Applications</h1>


<table class="table datatable ">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Application[0].IdNumber)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Application[0].PhoneNumber)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Application[0].EMail)
            </th>
             
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Application)
        {
            <tr>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.Id">
                        @Html.DisplayFor(modelItem => item.Title)

                        @Html.DisplayFor(modelItem => item.FirstName)

                        @Html.DisplayFor(modelItem => item.MiddleName)

                        @Html.DisplayFor(modelItem => item.Surname)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdNumber)
                </td>

               
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EMail)
                </td>
                 
            </tr>
        }
    </tbody>
</table>
