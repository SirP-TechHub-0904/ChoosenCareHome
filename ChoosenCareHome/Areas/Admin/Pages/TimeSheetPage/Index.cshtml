@page
@model ChoosenCareHome.Areas.Admin.Pages.TimeSheetPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Time Sheet</h1>

 
<table class="table datatable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TimeSheet[0].Date)
            </th>
            <th>Assigned Users</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TimeSheet) {
        <tr>
            <td>
                @item.Date.ToString("ddd dd MMM, yyyy")
            </td>
            <td>
                @item.UserTimeSheet.Count()
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
